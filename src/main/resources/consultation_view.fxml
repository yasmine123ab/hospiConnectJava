<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="org.hospiconnect.controller.ConsultationController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>
    
    <Label text="Consultations Management" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
        </columnConstraints>
        
        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="firstnameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="lastnameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextArea fx:id="noteArea" prefHeight="100" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave"/>
        <Button fx:id="clearButton" text="Clear" onAction="#handleClear"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete" disable="true"/>
    </HBox>
    
    <TableView fx:id="consultationTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
            <TableColumn fx:id="firstnameColumn" text="First Name" prefWidth="150"/>
            <TableColumn fx:id="lastnameColumn" text="Last Name" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
