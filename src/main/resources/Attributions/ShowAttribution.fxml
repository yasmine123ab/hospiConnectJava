<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<BorderPane prefHeight="552.0" prefWidth="935.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.hospiconnect.controller.attributions.ShowAttribution">

    <!-- ===== MENU LATÉRAL GAUCHE ===== -->
    <left>
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #ADD8E6;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <!-- Logo en haut à gauche -->
            <ImageView fitHeight="50.0" fitWidth="90.0">
                <image>
                    <Image url="@../images/logo.png" />
                </image>
            </ImageView>
            <!-- Logo -->
            <AnchorPane />

            <!-- Boutons de navigation avec icônes -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="26.0" fitWidth="26.0">
                    <image>
                        <Image url="@../icons/donation.png" /> <!-- icône don -->
                    </image>
                </ImageView>
                <Button onAction="#handleFaireUnDonClick" prefHeight="26.0" prefWidth="134.0" text="Faire un Don">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font></Button>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="28.0" fitWidth="27.0">
                    <image>
                        <Image url="@../icons/request.png" /> <!-- icône demande -->
                    </image>
                </ImageView>
                <Button onAction="#handleFaireUneDemandeClick" prefHeight="26.0" prefWidth="134.0" text="Demande de Don">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font></Button>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="28.0" fitWidth="27.0">
                    <image>
                        <Image url="@../icons/request.png" /> <!-- icône demande -->
                    </image>
                </ImageView>
                <Button onAction="#handleFaireUneAttributionClick" prefHeight="26.0" prefWidth="134.0" text="Attribution des Dons">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font></Button>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <ImageView fitHeight="29.0" fitWidth="28.0">
                    <image>
                        <Image url="@../icons/stats.png" /> <!-- icône stats -->
                    </image>
                </ImageView>
                <Button prefHeight="26.0" prefWidth="134.0" text="Statistiques">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font></Button>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="menuHomeButton" prefHeight="26.0" prefWidth="134.0" text="Home">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font></Button>
            </HBox>
        </VBox>
    </left>


    <!-- ===== CONTENU PRINCIPAL : LISTE DES ATTRIBUTIONS ===== -->
    <center>
        <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS">
            <content>
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>

                    <!-- BARRE DE RECHERCHE + BOUTON -->
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <TextField fx:id="searchField" prefHeight="26.0" prefWidth="435.0" promptText="Rechercher une Attribution..." />
                        <Button fx:id="sortButton" text="Trier ↑" prefWidth="80.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                        <Button fx:id="addAttributionButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Ajouter Attribution" />
                    </HBox>

                    <!-- LISTE DES DONS -->
                    <VBox fx:id="attributionListContainer" spacing="10.0" />
                    <!-- BOUTON EXPORTER PDF -->
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <Button fx:id="exportPdfButton" text="Exporter PDF"
                                style="-fx-background-color: #FF5722; -fx-text-fill: white;"
                                prefWidth="150.0" prefHeight="30.0" />
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
