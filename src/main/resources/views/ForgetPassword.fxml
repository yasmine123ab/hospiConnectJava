<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.ForgetPasswordController"
           stylesheets="@/styles/signup.css"
           style="-fx-background-color: #0A2A63;"> <!-- Bleu foncé -->

    <VBox alignment="CENTER" spacing="20" maxWidth="450"
          style="-fx-background-color: #E8F0FE; -fx-padding: 40; -fx-background-radius: 12;"
          StackPane.alignment="CENTER">

        <!-- Logo -->
        <ImageView fx:id="logoImage" fitHeight="150" fitWidth="120" preserveRatio="true">
            <image>
                <Image url="/HOSPI.png"/> <!-- Remplace par le chemin de ton logo -->
            </image>
        </ImageView>

        <!-- Titre -->
        <Label text="Mot de passe oublié ?" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0A2A63;" />
        <Label text="Entrez votre email pour réinitialiser votre mot de passe."
               style="-fx-text-fill: #4A5D85; -fx-wrap-text: true; -fx-text-alignment: center;" />

        <!-- Champ email -->
        <VBox spacing="10" alignment="CENTER">
            <Label text="Email:" style="-fx-font-weight: bold; -fx-text-fill: #0A2A63;" />
            <TextField fx:id="txtEmail" promptText="Votre email"
                       style="-fx-pref-width: 300; -fx-padding: 10; -fx-background-radius: 8; -fx-background-color: white;" />
        </VBox>

        <!-- Bouton envoyer -->
        <Button fx:id="btnSend" text="Envoyer le lien de réinitialisation"
                styleClass="form-button" />

        <!-- Retour à la connexion -->
        <Label>
            <graphic>
                <Hyperlink fx:id="linkBackToLogin" text="Retour à la connexion"
                           styleClass="hover-link" onAction="#handleBackToLogin" />
            </graphic>
        </Label>

    </VBox>
</StackPane>
